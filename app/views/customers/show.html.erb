
<div class="am-g am-g-fixed vendor-fixed">

    <div class="am-u-md-8 am-u-sm-12">

    

      <% @customer.vendors.each do |vendor| %>
        <article class="am-g blog-entry-article">

           <h3>他基本信息：</h3>
           <%= @customer.name%>
           <!-- content srart -->
           <h3>他关注过的店：</h3>

            <h1>
              <a href="/vendors/<%= vendor.id %>?customer_id=<%=@customer.id%>"><%= vendor.title %></a>
            </h1>

            <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 blog-entry-img">
                <a href="/vendors/<%= vendor.id %>?customer_id=<%=@customer.id%>"><%= image_tag vendor.cover_img_path ,:class=>"am-u-sm-12",:width=>"600px",:higth=>"400px" %></a>
            </div>
            <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 vendor-entry-text">
                <span>访问热度：<a href="/vendors/<%= vendor.id %>?customer_id=<%=@customer.id%>" class="vendor-color"><%= vendor.view_count %></a></span>
                <span>入驻时间：<%= show_db_time(vendor.created_at) %></span>
            </div>
        </article>
      <% end %>
    </div>
    
</div>
<!-- content end -->