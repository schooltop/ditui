<% if @market.errors.blank? %>
  $("tbody").prepend('<%= j render('list', market: @market) %>');
  $("#market_modal").modal('hide');
<% else %>
  $(".field .red.pointing").remove();
  <% @market.errors.messages.each do |key, value| %>
    $("#market_<%= key %>").parent().addClass('error');
    $("#market_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>

$(".button").popup();
$(".icon").popup();
$(document).find('.dropdown').dropdown({
    on: 'hover'
});
