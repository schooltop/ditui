<tr id="market_<%= market.id %>">
  <td class="center aligned">
    <span><%= market.id%></span>
  </td>
  <td class="center aligned">
     <a href="/markets/show_gps?id=<%=market.cover_img.to_i%>" target="_blank">
       <%= image_tag market.cover_img_path ,:class=>"blog-entry-img blog-article-margin",:width=>"60px",:higth=>"40px" %>   
    </a>
  </td>
  <td class="center aligned">
    <%= market.name %>
  </td>
  <td class="center aligned">
    <%= market.address %>
  </td>
  <td class="center aligned">
    <%= link_to edit_admin_market_path(market.id) , remote: true, class: 'ui icon primary button', 'data-content' => '修改market', 'data-variation' => 'inverted'  do%>
      <i class="edit icon"></i>
    <% end %>
    <%= link_to new_attachment_path(entity: "Market", entity_id: market.id, tag: "picture"), remote: true do %>
      <i class="file icon color_9c9c9d" data-content='picture' data-variation='inverted wide'></i>market‘s picture
    <% end %>
  </td>
</tr>
