<div class="client_backstage">
        <div class="container">
            <!-- 左侧菜单 -->
            <%= render 'left' %>
            <div class="client_backstage_main">
                
                <div class="ui bottom attached tab segment active" data-tab="all_orders">
                   <div class="client_backstage_orders">
                        <form action="" class="client_backstage_search">
                            <dl>
                                <dt>Search My Inquiries:</dt>
                                <dd>
                                    <input type="text" id="loginName" name="user[member_name]" placeholder="Please input CAS no. or product Name" class="input" style="width: 197px;">
                                </dd>
                                <dt>Time:</dt>
                                <dd>
                                    <div class="input_min">
                                        <input type="date" id="loginName" name="user[member_name]" class="input" style="    width: 197px;">
                                    </div>
                                </dd>
                                <input type="button" class="btn_seach" value="Search">
                            </dl>
                        </form>
                        <% current_user.gps.each do |gps| %>                  
                        <div class="state2">
                            <div class="head">
                                <div class="l ml15"> 
                                    <span class="mr10">2017-09-18 06:10:45</span>
                                    <span class="mr10">OD-BFTV-FQSZ-K9FL-375F</span>
                                </div>
                                <div class="rel l">
                                    <i class="icon_marker"></i>
                                </div>
                                <span class="dib mr20 r">TT30</span>
                                <div class="r expired mt10 mr10">
                                    <div class="schedule" style='width: 70%'></div>
                                    <div class="text">Payment due in 4 days</div>
                                </div>
                            </div>
                            <div class="main">
                                 <table class="ui very basic table">
                                <tbody>
                                    <tr>
                                        <td class='tc'>
                                          <a href="/vendors/show_gps?id=<%=gps.cover_img.to_i%>" target="_blank">
                                            <img class="img" src="<%= gps.cover_img_path %>" alt="">
                                          </a>  
                                        </td>
                                        <td>
                                            <p><%= gps.created_at %></p>
                                            <p>1-methyl-1H-imidazole;</p>
                                        </td>
                                        <td>
                                            <p>10.0mg</p>
                                            <p class='green'>$1,177.43</p>
                                        </td>
                                        <td rowspan="2" class='lborder tl'>
                                            <p class="green mb10">经度: <%= gps.latitude %></p>
                                            <p class="red mb10">纬度: <%= gps.longitude %></p>
                                            <a href="/customers?latitude=<%= gps.latitude %>&longitude=<%= gps.longitude %>&gps_id=<%=gps.id%>" target="_brank"><button class="pay_now">查看</button></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                        </div>
                        <% end %>
                   </div>
                </div>
            </div>
        </div>
    </div>