<tr id="community_<%= community.id %>">
  <td class="center aligned">
    <span><%= community.id%></span>
  </td>
  <td class="center aligned">
     <a href="/vendors/show_gps?id=<%=community.cover_img.to_i%>" target="_blank">
       <%= image_tag community.cover_img_path ,:class=>"blog-entry-img blog-article-margin",:width=>"60px",:higth=>"40px" %>   
    </a>
  </td>
  <td class="center aligned">
    <%= community.name %>
  </td>
  <td class="center aligned">
    <%= community.address %>
  </td>
  <td class="center aligned">
    <%= link_to edit_admin_community_path(community.id) , remote: true, class: 'ui icon primary button', 'data-content' => '修改community', 'data-variation' => 'inverted'  do%>
      <i class="edit icon"></i>
    <% end %>
    <%= link_to new_attachment_path(entity: "Community", entity_id: community.id, tag: "picture"), remote: true do %>
      <i class="file icon color_9c9c9d" data-content='picture' data-variation='inverted wide'></i>community‘s picture
    <% end %>
  </td>
</tr>
