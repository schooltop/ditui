
<br/><br/>
<%= form_for @customer, url: customer_path(@customer), method: "put", :html => { :multipart => true } do |f| %>
  <div class="field">
    <%= file_field_tag "draft_img", id: 'draft_img' %>
  </div>

  <div class="control-group optional form-group field" style="margin-top: 10px" >
    <%= f.label :category, 'Category', class: 'password optional control-label' %>
    <div class="controls">
      <%= f.select :category_id, options_for_select(Category.all.collect { |p| [ p.name, p.id ] }, @customer.category_id), {include_blank: true}, {class: 'form-control input-sm ui dropdown', style: 'width: 280px;' } %>
    </div>
  </div>

  <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
    <%= f.label :name, 'Name', class: 'password optional control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'form-control input-sm', style: 'width: 280px;' %>
    </div>
  </div>

  <div class="control-group optional form-group field" style="margin-top: 10px" >
    <%= f.label :content, 'Content', class: 'password optional control-label' %>
    <div class="controls">
      <%= text_area_tag 'customer[content]', @customer.content, { rows: 100, class: 'form-control input-sm'  } %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<% content_for :scripts do %>
  <%= javascript_include_tag 'wangEditor.min' %>
    <%= stylesheet_link_tag 'wangEditor.min' %>
  <script>
    //富文本编辑器初始化
    var editor = new wangEditor('customer_content');
    //图片上传配置
    editor.config.uploadImgUrl = "/customers/upload_image";
    editor.config.uploadImgFileName = "wang_editor_file"
    editor.config.uploadHeaders = {
    'Accept' : 'text/x-json',
    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
    };
    editor.create();
    editor.$editorContainer.css('z-index', 0);
  </script>
<% end %>

