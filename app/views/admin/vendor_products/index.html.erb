<% content_for :product_detail do %>
<table class="ui celled table">
  <thead>
  <tr>
    <th class="center aligned">id</th>
    <th class="center aligned">vendor name</th>
    <th class="center aligned">Product Name</th>
    <th class="center aligned">Time Added</th>
    <th class="center aligned">Status</th>
    <th class="center aligned">Action</th>
  </tr>
  </thead>
  <tbody>
    <%= render partial: 'list', collection: @vendor_products, as: :vendor_product %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="7">
        <span class="blue">
          <%= page_entries_info(@vendor_products) %>
        </span>
        <%= paginate(@vendor_products, class: 'ui pagination menu right floated') %>
      </th>
    </tr>
  </tfoot>
</table>
<% end %>
<%= render 'show' %>